doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="/css/app.css")
        <script src="https://kit.fontawesome.com/d34bb7588f.js" crossorigin="anonymous"></script>

        title #{nombrePagina}
    body 
        header.barra
            h1 UpTask - Administrador de proyectos
            a(href="#") Cerrar sesion 

        main.contenedor 
            aside.contenedor-proyectos 
                .panel.crear-proyecto 
                    a(href="/nuevo-proyecto" class="boton") New Proyecto
                        span + 
                .panel.lista-proyectos
                    h2 Proyectos
                    ul#proyectos.proyectos 
                        if(proyectos.length)
                            each proyecto in proyectos
                                li 
                                    a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre 
            block contenido

            //- pre= vardump(proyectos)
        script(src="/dist/bundle.js") 